{
  "mcpServers": {
    "shadcn": {
      "command": "bun",
      "args": ["x", "--bun", "shadcn@latest", "mcp"]
    },
    "apx": {
      "command": "uv",
      "args": ["run", "apx", "dev", "mcp"]
    },
    "playwright": {
      "command": "bun",
      "args": ["x", "--bun", "@playwright/mcp@latest"]
    }
  }
}
