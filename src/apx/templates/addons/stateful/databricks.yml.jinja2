bundle:
  name: "{{app_name}}"

sync:
  include:
    - .build

artifacts:
  default:
    build: uv run apx build

resources:
  database_instances:
    {{app_name}}-db:
      name: "{{app_name}}"
      capacity: "CU_1"
  apps:
    {{app_name}}-app:
      name: "{{app_name}}"
      description: "{{app_name}} created with apx"
      source_code_path: ./.build
      resources:
        - name: "db"
          database:
            database_name: "databricks_postgres"
            instance_name: "{{app_name}}"
            permission: "CAN_CONNECT_AND_CREATE"






targets:
  dev:
    mode: development
    default: true