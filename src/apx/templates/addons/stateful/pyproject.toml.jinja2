[project]
name = "{{app_name}}"
dynamic = ["version"]
description = "Add your description here"
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
    "fastapi>=0.119.0",
    "pydantic-settings>=2.11.0",
    "uvicorn>=0.37.0",
    "databricks-sdk>=0.74.0",
    "sqlmodel>=0.0.27",
    "psycopg[binary,pool]>=3.2.11",
]

[dependency-groups]
dev = [
    "apx",
]

[tool.apx.metadata]
app-name = "{{app_name}}"
app-slug = "{{app_slug}}"
app-module = "{{app_slug}}.backend.app:app"
api-prefix = "/api"
metadata-path = "src/{{app_slug}}/_metadata.py"


[tool.uv.sources]
apx = { git = "https://github.com/benjarvis18/apx.git" }

[build-system]
requires = ["hatchling", "uv-dynamic-versioning>=0.7.0"]
build-backend = "hatchling.build"

[tool.hatch.version]
source = "uv-dynamic-versioning"

[tool.uv-dynamic-versioning]
vcs = "git"
format-jinja = "{% raw %}{{version}}{% endraw %}"

[tool.hatch.build.hooks.version]
path = "src/{{app_slug}}/_version.py"
template = '''
version = "{version}"
'''

[tool.hatch.build]
artifacts = ["src/{{app_slug}}/__dist__", "src/{{app_slug}}/_metadata.py"]
exclude = ["src/{{app_slug}}/ui"]